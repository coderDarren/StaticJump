using System;
using System.Collections.Generic;
using Sce.PlayStation.Core;
using Sce.PlayStation.Core.Graphics;
using Sce.PlayStation.Core.Imaging;

namespace StaticJump
{
	public class Enemy1 : Enemy
	{
		private GraphicsContext graphics;
		private float bullet_speed;
		private float enemy_speed;
		private Sprite b; //bullet
		private Sprite e; //enemy
		
		public Enemy1 (GraphicsContext gc, Vector3 pos, Texture2D tex, Texture2D b_tex, float enemy_speed, float bullet_speed, string id) : base (gc, pos, tex, id)
		{
			graphics = gc;
			this.bullet_speed = bullet_speed;
			this.enemy_speed = enemy_speed;
		} 
		
		public void Update()
		{
			switch (currState)
			{
			case State.Alive: UpdateLiving(ref e, enemy_speed); break;
			case State.Dead: UpdateDying(ref e); break;
			}
		}
		
		public void Render()
		{
			Render(e);
			Render(b);
		}
	}
}
